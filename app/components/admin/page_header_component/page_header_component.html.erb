<div class="bg-gray-100 border-b border-gray-200 w-full flex items-center px-4 page-header py-1 h-16">
  <div class="flex items-baseline flex-grow">
    <h3 class="text-lg leading-6 font-medium text-gray-900">
      <%= title %>
    </h3>

    <% if tabs.present? %>
      <div class="ml-10">
        <nav class="flex space-x-2 tabs">
          <%= tabs %>
        </nav>
      </div>
    <% end %>
  </div>

  <% if actions.present? %>
    <div class="flex space-x-2">
      <%= actions %>
    </div>
  <% end %>
</div>
