<div class="ui modal">
  <div class="ui header">
    <i class="tag icon"></i>
    Add Tags to Bookmarks
  </div>
  <div class="scrolling content">
    <p>This will add your new tags to all of these bookmarks.</p>
    <form class="ui fluid form">
      <div class="field">
        <label for="modal-tags-input">Tags</label>
        <select class="ui multiple search selection dropdown" data-behavior="autocomplete-bookmark-tags" multiple=true>
        </select>
      </div>
    </form>
    <table class="ui celled table">
      <thead>
        <th>Title</th>
        <th>URL</th>
      </thead>
      <tbody>
        <% models.forEach((model) => { %>
          <tr>
            <td><%= model.title %></td>
            <td><%= model.uri %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
  <div class="actions">
    <div class="ui cancel button">
      <i class="remove icon"></i>
      Cancel!
    </div>
    <div class="ui red ok button">
      <i class="checkmark icon"></i>
      Add Tags!
    </div>
  </div>
</div>
