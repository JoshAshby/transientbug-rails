- content_for :page_title do
  Home

.ui.stacked.segment
  %h2.ui.dividing.header Quick Stats

  .ui.statistics
    .statistic
      .value= @stats[:total_count]
      .label Total Bookmarks
    - if @stats[:untagged_count] != 0
      .statistic.red
        .value= @stats[:untagged_count]
        .label= link_to "Untagged Bookmarks", bookmarks_search_index_path(q: "NOT has:tags")
    - else 
      .statistic
        .value= @stats[:untagged_count]
        .label Untagged Bookmarks!

%h2.ui.dividing.header Most recent bookmarks
= render partial: "bookmarks/bookmarks_list", locals: { bookmarks: @recent_bookmarks }
