<!DOCTYPE html>
<html>
  <head>
    <%= render "layouts/common/head" do %>
      <title>transientBug <%= content_for :page_title %></title>
    <% end %>
  </head>

  <body class="relative flex flex-col min-h-screen tb-page tb-<%= controller_name %> tb-<%= action_name %>">
    <%= render "layouts/common/body_preface" %>

    <div>
      <div class="bg-gray-800 pb-32">
        <%= render "layouts/common/navbar" %>

        <header class="py-10">
          <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <h1 class="text-3xl font-bold text-white">
              <%= content_for :page_title %>
            </h1>

            <% if content_for? :page_subtitle %>
              <p class="mt-2 max-w-4xl text-lg text-gray-300">
                <%= content_for :page_subtitle %>
              </p>
            <% end %>
          </div>
        </header>
      </div>

      <main class="-mt-32">
        <div class="max-w-7xl mx-auto pb-12 px-4 sm:px-6 lg:px-8">
          <div class="bg-white rounded-lg shadow px-5 py-6 sm:px-6 min-h-screen space-y-3">
            <%= yield %>
          </div>
        </div>
      </main>
    </div>

    <%= render "layouts/common/footer" %>
  </body>
</html>
