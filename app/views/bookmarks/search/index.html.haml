- content_for :page_title do
  Searching Bookmarks

%h3 Advanced Search
.query_builder.hidden{ data: { url: bookmarks_search_index_path, method: "POST", config: BookmarksSearcher.normalized_config.to_json, query: query.to_json } }
= javascript_pack_tag "query_builder"

%h1 Search Results

- if @bookmarks.blank_query?
  = render partial: "zero_state"
- else
  = render partial: "bookmarks/bookmarks_list", locals: { bookmarks: @bookmarks }
