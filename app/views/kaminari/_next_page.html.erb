<% if current_page.last? %>
  <div class="relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 bg-white text-sm font-medium text-gray-300 cursor-not-allowed">
    <span class="sr-only">Next</span>
    <%= inline_svg_pack_tag "feather/chevron-right.svg", class: "h-5 w-5" %>
  </div>
<% else %>
  <%= link_to url, title: t('views.pagination.next').html_safe, class: "relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50" do %>
    <span class="sr-only">Next</span>
    <%= inline_svg_pack_tag "feather/chevron-right.svg", class: "h-5 w-5" %>
  <% end %>
<% end %>
