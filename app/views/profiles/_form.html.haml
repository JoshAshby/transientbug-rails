= form_for user, url: profile_path, method: :post, html: { class: "ui form" } do |f|
  - if user.errors.any?
    .ui.message.error
      %h2= "#{ pluralize user.errors.count, "error" } prohibited this user from being saved:"
      %ul
        - user.errors.full_messages.each do |message|
          %li= message

  .ui.segment
    .ui.list
      .item
        .content
          .header Username
          .description Used only for personalizing the site and communications; It does not have to be unique

      .item
        .content
          .header Email
          .description Used to contact you, help recover a lost password and identify you during login; It does have to be unique.

    .required.field
      = f.label :username
      .ui.left.icon.input
        %i.user.icon
        = f.text_field :username, placeholder: "Username"

    .required.field
      = f.label :email
      .ui.left.icon.input
        %i.user.icon
        = f.text_field :email, placeholder: "Email"

    = f.submit "Update", class: "ui right floated green submit button"
