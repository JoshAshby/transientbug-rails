- content_for :meta do
  %meta{ property: "og:type", content: "website" }
  %meta{ property: "og:url", content: request.original_url }
  %meta{ property: "og:title", content: @image.title }
  %meta{ property: "og:description", content: @image.tags.join(", ") }
  %meta{ property: "og:image", content: (request.base_url + @image.image.service_url) }

  %meta{ name: "twitter:card", content: "summary_large_image" }
  %meta{ name: "twitter:domain", content: "https://transientbug.ninja/" }
  %meta{ name: "twitter:title", content: @image.title }
  %meta{ name: "twitter:description", content: @image.tags.join(", ") }
  %meta{ name: "twitter:image", content: (request.base_url + @image.image.service_url) }
  %meta{ name: "twitter:url", content: request.original_url }

- content_for :page_title do
  = @image.title

= render "navbar"

- content_for :body do
  .ui.fluid.grid
    .row
      %h1= @image.title

    .row
      = image_tag @image.image.service_url, class: "ui top attached centered image"

    .row
      .ui.fluid.menu
        - if policy(@image).update?
          = link_to "Edit", edit_image_path(@image), class: "item"

        .right.menu
          .ui.item
            Updated: #{ @image.updated_at.to_date.to_s(:long) }

    .row
      = render partial: "tags", locals: { tags: @image.tags }
