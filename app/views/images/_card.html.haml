.card
  = link_to image_path(image), class: "ui fluid image" do
    - if image.disabled?
      .ui.red.ribbon.label Disabled
    = image_tag image.image

  .content
    = link_to image.title, image_path(image), class: "header"

    .meta
      Added #{ image.created_at.to_date.to_s(:long) }

    .description
      .ui.label{ data: { behavior: "tag-popup" } }
        %i.tag.icon
        = image.tags.length
      .ui.fluid.popup.top.left.transition.hidden
        = render partial: "tags", locals: { tags: image.tags }

  .ui.buttons.bottom.attached
    = link_to "View", image, class: "ui button"

    - if policy(image).update?
      .or
      = link_to "Edit", edit_image_path(image), class: "ui primary button"
