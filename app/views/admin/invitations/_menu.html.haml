.ui.fluid.vertical.menu
  .item
    .header
      Invitations

  = active_link_to admin_invitations_path, active: :exclusive, class: "item" do
    Index
    - if count
      .ui.label= count

  = active_link_to new_admin_invitation_path, class: "item" do
    %i.plus.icon
    New

  -#.item
    .ui.transparent.icon.input
      = form_tag admin_invitations_path, method: :get do
        = search_field_tag "q", params[:q], class: "ui prompt", placeholder: "Search ...", aria: { label: "search" }
      %i.search.link.icon

  = content_for :menu
