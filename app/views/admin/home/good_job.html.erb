<% content_for :page_header do %>
  <%= render Admin::PageHeaderComponent.new do |c| %>
    <% c.title do %>
      Workers
    <% end %>

    <% c.tabs do %>
      <%= link_to "Embed", admin_workers_path, class: ["tab", "active"] %>
      <%= link_to "Direct", good_job_path, class: "tab" %>
    <% end %>
  <% end %>

  <%= render Admin::BreadcrumbsComponent.new do |c| %>
    <% c.crumbs([
      { name: "Workers", href: admin_workers_path }
    ]) %>
  <% end %>
<% end %>

<% content_for :frame do %>
  <iframe src="<%= good_job_path %>" class="h-full w-full" />
<% end %>
