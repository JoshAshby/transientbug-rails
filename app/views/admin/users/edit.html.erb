<% content_for :page_header do %>
  <%= render Admin::PageHeaderComponent.new do |c| %>
    <% c.title do %>
      Edit User
    <% end %>

    <% c.actions do %>
      <%= link_to "Change Password", admin_user_password_index_path(@user), class: "btn -tertiary" %>
    <% end %>
  <% end %>

  <%= render Admin::BreadcrumbsComponent.new do |c| %>
    <% c.crumbs([
      { name: "Users", href: admin_users_path },
      { name: @user.id, href: admin_user_path(@user) }
    ]) %>
  <% end %>
<% end %>

<%= render "form", user: @user %>
