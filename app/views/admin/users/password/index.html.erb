<% content_for :page_header do %>
  <%= render Admin::PageHeaderComponent.new do |c| %>
    <% c.title do %>
      Change Users Password
    <% end %>
  <% end %>

  <%= render Admin::BreadcrumbsComponent.new do |c| %>
    <% c.crumbs([
      { name: "Users", href: admin_users_path },
      { name: @user.id, href: admin_user_path(@user) },
      { name: "Change Password", href: admin_user_password_index_path(@user) }
    ]) %>
  <% end %>
<% end %>

<%= render "form", user: @user %>
